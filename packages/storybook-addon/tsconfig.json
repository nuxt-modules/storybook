{
  "extends": "./.storybook/tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "target": "ESNext",
    "module": "ESNext",
    "types": ["node"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "#app": ["./node_modules/nuxt/dist/app"],
      "#app/entry": ["./node_modules/nuxt/dist/app/entry"]
    }
  },
  "include": ["src/**/*"]
}
