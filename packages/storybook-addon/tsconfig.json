{
  "compilerOptions": {
    "rootDir": ".",
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],
    "skipLibCheck": false,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "#app": ["./node_modules/nuxt/dist/app"],
      "#app/entry": ["./node_modules/nuxt/dist/app/entry"]
    }
  },
  "include": ["src/**/*", "tsup.config.ts"]
}
